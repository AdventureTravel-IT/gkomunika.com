<script>
  function clearFieldError(field) {
    if (!field) return;

    const wrapper =
      field.closest('.form-insurance__field') ||
      field.closest('.relationship-wrapper') ||
      field.closest('.form-insurance__wrapper') ||
      field.parentElement;

    if (!wrapper) return;

    field.classList.remove('field-error');
    wrapper.classList.remove('field-error');

    const span = wrapper.querySelector('.error-message');
    if (span) span.textContent = '';
  }

  function setFieldError(field, message) {
    if (!field) return;

    const wrapper =
      field.closest('.form-insurance__field') ||
      field.closest('.relationship-wrapper') ||
      field.closest('.form-insurance__wrapper') ||
      field.parentElement;

    if (!wrapper) return;

    field.classList.add('field-error');
    wrapper.classList.add('field-error');

    let span = wrapper.querySelector('.error-message');
    if (!span) {
      span = document.createElement('span');
      span.className = 'error-message';
      wrapper.appendChild(span);
    }
    span.textContent = message;
  }

  function setGlobalCheckboxError(message) {
    const container = document.getElementById('confirmation-checkboxes');
    if (!container) return;

    container.classList.add('field-error');

    let span = container.querySelector('.error-message');
    if (!span) {
      span = document.createElement('span');
      span.className = 'error-message';
      container.appendChild(span);
    }
    span.textContent = message;
  }

  function clearGlobalCheckboxError() {
    const container = document.getElementById('confirmation-checkboxes');
    if (!container) return;

    container.classList.remove('field-error');
    const span = container.querySelector('.error-message');
    if (span) span.textContent = '';
  }

  function validateDates() {
    const today = new Date().toISOString().split('T')[0];
    const startDateInputs = document.querySelectorAll('input[name="Start Date"]');
    const endDateInputs = document.querySelectorAll('input[name="End Date"]');
    let isValid = true;

    startDateInputs.forEach((input) => {
      if (!input) return;
      clearFieldError(input);
      input.min = today;

      if (input.value && input.value < today) {
        isValid = false;
        setFieldError(input, 'Start date cannot be in the past');
      }
    });

    endDateInputs.forEach((input) => {
      if (!input) return;
      clearFieldError(input);
      input.min = today;

      const wrapper = input.closest('.form-insurance__wrapper');
      const startDateInput = wrapper?.querySelector('input[name="Start Date"]');

      if (input.value && input.value < today) {
        isValid = false;
        setFieldError(input, 'End date cannot be in the past');
      }

      if (startDateInput?.value && input.value && input.value < startDateInput.value) {
        isValid = false;
        setFieldError(input, 'End date cannot be earlier than start date');
      }
    });

    return isValid;
  }

  function validateAllFields() {
    const container = document.querySelector('.form-insurance__container');
    if (!container) return true;

    const requiredFields = container.querySelectorAll('input[required], select[required], textarea[required]');
    let isValid = true;

    requiredFields.forEach((field) => {
      if (field.type === 'radio') return;
      clearFieldError(field);
    });

    requiredFields.forEach((field) => {
      if (field.type === 'radio') return;

      const value = field.value.trim();
      const fieldName = field.getAttribute('name') || field.id || '';
      let fieldValid = true;
      let message = '';

      if (!value) {
        fieldValid = false;
        message = 'This field is required';
      }

      if (fieldValid && value) {
        switch (fieldName) {
          case 'First Name':
          case 'Last Name':
          case 'Place Of Birth':
          case 'City':
            if (!/^[A-Za-z\s'.-]{2,}$/.test(value)) {
              fieldValid = false;
              message = 'Only letters and spaces, minimum 2 characters';
            }
            break;

          case 'Day':
            if (!/^\d{1,2}$/.test(value) || Number(value) < 1 || Number(value) > 31) {
              fieldValid = false;
              message = 'Day must be between 1 and 31';
            }
            break;

          case 'Month':
            if (!/^\d{1,2}$/.test(value) || Number(value) < 1 || Number(value) > 12) {
              fieldValid = false;
              message = 'Month must be between 1 and 12';
            }
            break;

          case 'Year':
            if (!/^\d{4}$/.test(value) || Number(value) < 1900 || Number(value) > 9999) {
              fieldValid = false;
              message = 'Year must be 4 digits (1900–9999)';
            } else {
              const wrapper = field.closest('.form-insurance__wrapper');
              const dayVal = wrapper?.querySelector('input[name="Day"]')?.value;
              const monthVal = wrapper?.querySelector('input[name="Month"]')?.value;
              if (dayVal && monthVal) {
                const d = Number(dayVal);
                const m = Number(monthVal);
                const y = Number(value);
                const dateObj = new Date(y, m - 1, d);
                if (dateObj.getFullYear() !== y || dateObj.getMonth() !== m - 1 || dateObj.getDate() !== d) {
                  fieldValid = false;
                  message = 'Date of birth is not a valid calendar date';
                }
              }
            }
            break;

          case 'Passport Number':
            if (!/^[A-Za-z0-9]{6,20}$/.test(value)) {
              fieldValid = false;
              message = '6–20 characters, letters and numbers only';
            }
            break;

          case 'Mobile Phone':
            if (!/^[0-9]{8,15}$/.test(value)) {
              fieldValid = false;
              message = '8–15 digits, numbers only';
            }
            break;

          case 'Email':
          case 'Additional Email':
            if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value)) {
              fieldValid = false;
              message = 'Invalid email format (example: name@mail.com)';
            }
            break;

          case 'Postal Code':
            if (!/^[0-9]{3,10}$/.test(value)) {
              fieldValid = false;
              message = 'Postal code must be 3–10 digits';
            }
            break;

          case 'Address':
            if (value.length < 5) {
              fieldValid = false;
              message = 'Address must be at least 5 characters';
            }
            break;

          case 'Start Date':
          case 'End Date':
            if (!/^\d{4}-\d{2}-\d{2}$/.test(value)) {
              fieldValid = false;
              message = 'Invalid date format (YYYY-MM-DD)';
            }
            break;

          case 'Destination Country':
            if (!value) {
              fieldValid = false;
              message = 'Please select destination country';
            }
            break;

          default:
            break;
        }
      }

      if (!fieldValid) {
        isValid = false;
        setFieldError(field, message || 'Invalid value');
      }
    });

    const radioRequired = container.querySelectorAll('input[type="radio"][required]');
    const radioGroups = new Set();
    radioRequired.forEach((r) => radioGroups.add(r.name));

    radioGroups.forEach((groupName) => {
      const radios = container.querySelectorAll(`input[type="radio"][name="${groupName}"]`);
      const anyChecked = Array.from(radios).some((r) => r.checked);
      const anyRadio = radios[0];
      if (!anyRadio) return;

      const wrapper =
        anyRadio.closest('.relationship-wrapper') ||
        anyRadio.closest('.form-insurance__wrapper') ||
        anyRadio.parentElement;

      if (!anyChecked) {
        isValid = false;
        if (wrapper) {
          wrapper.classList.add('field-error');
          let span = wrapper.querySelector('.error-message');
          if (!span) {
            span = document.createElement('span');
            span.className = 'error-message';
            wrapper.appendChild(span);
          }
          span.textContent = 'Please choose one option';
        }
      } else if (wrapper) {
        wrapper.classList.remove('field-error');
        const span = wrapper.querySelector('.error-message');
        if (span) span.textContent = '';
      }
    });
    return isValid;
  }

  function getSectionSelector(section, variantId) {
    if (section === 'Duo Plus') return `#duoplus-section-${variantId}`;
    if (section === 'Family') return `[data-product-id="${variantId}"]`;
    return `#form-${section?.toLowerCase()}`;
  }

  function collectItineraryFromSectionTop(sectionTopElement) {
    if (!sectionTopElement) {
      return { startDate: '', endDate: '', destinationCountry: '' };
    }

    const startDate = sectionTopElement.querySelector('#start-date')?.value || '';
    const endDate = sectionTopElement.querySelector('#end-date')?.value || '';
    const destCountry = sectionTopElement.querySelector('.itinerary-country-dropdown')?.value || '';

    return {
      startDate,
      endDate,
      destinationCountry: destCountry,
