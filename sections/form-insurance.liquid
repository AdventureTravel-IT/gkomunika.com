    <div class="form-insurance__field">
      <div style="display: flex; gap: 5px;">
        <label for="end-date">End Date</label>
        <span class="tooltip-label">
          {{- 'icon-info.svg' | inline_asset_content -}}
          <span class="tooltip-text">End Date is the day you arrive back home after the trip.</span>
        </span>
      </div>
      <input type="date" id="end-date" name="End Date" min="{{ " now" | date: "%Y-%m-%d" }}" required>
