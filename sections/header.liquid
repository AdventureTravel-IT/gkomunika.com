{% style %}
  /* HEADER STYLE */
  .cart-link {
    position: relative;
  }

  .cart-count {
    position: absolute;
    top: 3px;
    right: -5px;
    background-color: var(--color-secondary);
    color: var(--color-neutral);
    font-size: 10px;
    width: 15px;
    height: 15px;
    border-radius: 50%;
    display: none;
    justify-content: center;
    align-items: center;
    text-align: center;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  .header__container {
    max-width: 1920px;
    margin: 0 auto;
  }
  .header__wrapper {
    display: flex;
    justify-content: space-between;
    padding: 0 10%;
    align-items: center;
  }

  .header-conten-menu button {
    border: none;
    background: transparent;
    display: none;
  }

  .header-content-icon {
    filter: brightness(0) saturate(100%) invert(20%) sepia(75%) saturate(2240%) hue-rotate(187deg) brightness(96%) contrast(107%);
  }

  .sidebar-menu {
    display: none;
  }

  .header-content-left {
    gap: 10px;
    display: flex;
    align-items: center;
  }
  .header-content-left a {
    display: flex;
    align-items: center;
  }
  .header__content-addOn {
    display: flex;
  }

  #bucks-floating-desktop {
    display: flex;
    align-items: center;
  }
  .header__content-right {
    display: flex;
    align-items: center;
    gap: 5px;
    height: 50px;
  }

  .header__content-menu {
    display: flex;
    gap: 10px;
    align-items: flex-start;
  }

  .header__content-profile {
    display: flex;
    align-items: center;
  }
  .header__content-profile {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .header__content-profile a {
    text-decoration: none;
    display: flex;
    align-items: center;
  }
  .header-content__menu-link {
    text-decoration: none;
    color: var(--color-primary);
    font-size: var(--font-large);
    transition: transform 0.3s ease;
  }
  .header-content__menu-link:hover {
    color: var(--color-secondary);
  }
  .header-content__menu-link.active {
    color: var(--color-secondary);
  }

  @media (max-width: 768px) {
    .header__wrapper {
      padding: 0 24px;
    }

    .header__content-menu,
    .header__content-addOn {
      display: none;
    }

    .header-content-left a {
      display: flex;
      align-items: center;
    }

    .header-conten-menu button {
      display: block;
    }

    .header-content-logo {
      margin: 0 15px;
    }

    .sidebar-menu {
      position: absolute;
      top: auto;
      left: 0;
      width: 100%;
      background: var(--color-neutral);
      z-index: 1000;

    }

    .sidebar-menu.active {
      display: block;
    }

    .menu-toggle {
      padding: 0;
    }

    .sidebar-menu ul {
      padding: 0 24px;
      margin: 0;
    }

    .sidebar-menu li {
      list-style: none;
      border-bottom: 1px solid #d9d9d9;
      padding: 10px;
    }

    .sidebar-menu a {
      font-size: var(--font-large);
      color: var(--color-primary);
      text-decoration: none;
    }

    .animated-icon {
      position: relative;
      width: 20px;
      height: 20px;
      cursor: pointer;
    }

    .animated-icon span {
      position: absolute;
      width: 100%;
      height: 3px;
      background: var(--color-primary);
      border-radius: 2px;
      transition: all 0.2s ease-in-out;
    }

    .animated-icon span:nth-child(1) {
      top: 0;
    }

    .animated-icon span:nth-child(2) {
      top: 8px;
    }

    .animated-icon span:nth-child(3) {
      top: 16px;
    }

    .animated-icon.open span:nth-child(1) {
      top: 8px;
      transform: rotate(45deg);
    }

    .animated-icon.open span:nth-child(2) {
      opacity: 0;
    }

    .animated-icon.open span:nth-child(3) {
      top: 8px;
      transform: rotate(-45deg);
    }
  }
{% endstyle %}

{% unless template == 'customers/login' or template == 'customers/register' %}
  <div class="header__container">
    <div class="header__wrapper">
      <div class="header-content-left">
        <div class="header-conten-menu">
          <button
            class="menu-toggle"
            onclick="toggleMenu()"
            aria-label="Open Menu">
            <div class="animated-icon" id="menu-icon">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </button>
        </div>
        {% if section.settings.logo != blank %}
          <a href="/">
            <img
              class="header-content-logo"
              src="{{ section.settings.logo | img_url: 'master' }}"
              width="120px"
              height="40px"
              alt="Site Logo"
              loading="eager">
          </a>
        {% endif %}
      </div>

      <div class="header__content-right">
        <section class="header__content-menu">
          {% assign menu_handle = settings.selected_menu | default: 'main-menu' %}
          {% if linklists[menu_handle] %}
            {% for link in linklists[menu_handle].links %}
              {% assign is_active = false %}
              {% if link.url == request.path or request.path == '/' and link.url == '/' %}
                {% assign is_active = true %}
              {% endif %}
              <a class="header-content__menu-link {% if is_active %}active{% endif %}" href="{{ link.url }}">
                {{ link.title }}
              </a>

            {% endfor %}

          {% endif %}
        </section>

        <section class="header__content-addOn">
          <div id="bucks-floating-desktop"></div>
          <localization-form>
            {%- form 'localization'
              , id: 'FooterLanguageForm'
              , class: 'localization-form' -%}
              <div>
                {%- render 'language-localization'
                  , localPosition: 'FooterLanguage' -%}
              </div>
            {%- endform -%}
          </localization-form>
        </section>
        <section class="header__content-profile">
          <a
            href="/cart"
            class="cart-link"
            aria-label="Shopping Cart">
            <img
              class="header-content-icon"
              src="{{ 'cart.svg' | asset_url }}"
              width="27px"
              height="27px"
              alt="Cart Icon"
              loading="eager">
            <span id="cart-count" class="cart-count"></span>
          </a>

          <a href="/account" aria-label="Account">
            <img
              class="header-content-icon"
              src="{{ 'profile.svg' | asset_url }}"
              width="27px"
              height="27px"
              alt="Profile Icon"
              loading="eager">
          </a>
        </section>
      </div>
    </div>

    <div id="sidebar-menu" class="sidebar-menu">
      {% assign menu_handle = settings.selected_menu | default: 'main-menu' %}
      {% if linklists[menu_handle] %}
        <ul>
          {% for link in linklists[menu_handle].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
      <div style="display: flex; align-items: center; padding: 0 24px;">
        <div id="bucks-mobile"></div>
        <localization-form>
          {%- form 'localization'
            , id: 'FooterLanguageForm'
            , class: 'localization-form' -%}
            <div>
              {%- render 'language-localization'
                , localPosition: 'FooterLanguage' -%}
            </div>
          {%- endform -%}
        </localization-form>
      </div>
    </div>
  </div>
{% endunless %}

{% schema %}
  {
    "name": "Header Settings",
    "settings": [
      {
        "type": "link_list",
        "id": "selected_menu",
        "label": "Menu"
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }
    ]
  }
{% endschema %}