{% unless template == 'customers/login' or template == 'customers/register' %}
  <div class="header__container">
    <div class="header__wrapper">
      <div class="header-conten-menu">
        <button
          class="menu-toggle"
          type="button"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="sidebar-panel"
        >
          <div class="animated-icon" id="menu-icon">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </button>

        {% if section.settings.logo != blank %}
          <a href="{{ routes.root_url }}" class="inline-flex-center">
            <img
              class="header-content-logo"
              src="{{ section.settings.logo | image_url: width: 120 }}"
              srcset="
                {{ section.settings.logo | image_url: width: 120 }} 120w,
                {{ section.settings.logo | image_url: width: 240 }} 240w
              "
              sizes="120px"
              width="120"
              height="40"
              alt="Global Komunika"
              loading="eager"
              decoding="async"
            >
          </a>
        {% endif %}
      </div>

      <div class="header-mobile-right" aria-label="Quick actions">
        <a href="{{ routes.cart_url }}" class="header-mobile-icon header-cart" aria-label="Cart">
          <span class="header-cart-icon-wrapper">
            <img
              src="{{ 'header-cart.svg' | asset_url }}"
              alt="Cart"
              class="icon-24"
              width="24"
              height="24"
              loading="eager"
              decoding="async"
            >
            {% if cart.items.size > 0 %}
              <span class="header-cart__badge">{{ cart.items.size }}</span>
            {% endif %}
          </span>
        </a>

        {% if customer %}
          {% assign profile_url = routes.account_url %}
        {% else %}
          {% assign profile_url = routes.account_login_url %}
        {% endif %}

        <a href="{{ profile_url }}" class="header-mobile-icon" aria-label="Profile">
          <img
            src="{{ 'header-profile.svg' | asset_url }}"
            alt="Profile"
            class="icon-24"
            width="24"
            height="24"
            loading="eager"
            decoding="async"
          >
        </a>
      </div>

      <div class="header-right">
        <div class="currency-language">
          <div class="currency-language-group">
            <div class="inline-flex-center">
              {{- 'header-currency.svg' | inline_asset_content -}}
            </div>
            <div id="bucks-floating-desktop"></div>
          </div>

          <localization-form>
            {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
              <div class="localization-inner">
                {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
              </div>
            {%- endform -%}
          </localization-form>
        </div>

        <nav class="header-menu" role="navigation" aria-label="Main navigation">
          <ul class="menu-list-wrapper">
            <li>
              <a href="{{ routes.root_url }}" class="menu-list">
                <img
                  src="{{ 'header-home.svg' | asset_url }}"
                  alt="Home icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">Home</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.root_url }}/pages/esim-page?sim_type=esim" class="menu-list">
                <img
                  src="{{ 'header-esim.svg' | asset_url }}"
                  alt="eSIM icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">eSIM</span>
              </a>
            </li>
            <li>
              <a
                href="{{ routes.root_url }}/pages/sim-card-page?sim_type=sim-card"
                class="menu-list"
              >
                <img
                  src="{{ 'header-simcard.svg' | asset_url }}"
                  alt="SIM Card icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">SIM Card</span>
              </a>
            </li>
            <li>
              <a
                href="{{ routes.root_url }}/pages/insurance-page?sim_type=insurance"
                class="menu-list"
              >
                <img
                  src="{{ 'header-insurance.svg' | asset_url }}"
                  alt="Insurance icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">Insurance</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.root_url }}/pages/check-data-usage" class="menu-list">
                <img
                  src="{{ 'header-usage.svg' | asset_url }}"
                  alt="Data Usage icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">Data Usage</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.root_url }}/pages/check-data-usage-topup" class="menu-list">
                <img
                  src="{{ 'icon-plus.svg' | asset_url }}"
                  alt="Top Up icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">Top Up</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.root_url }}/pages/about-us" class="menu-list">
                <img
                  src="{{ 'header-about.svg' | asset_url }}"
                  alt="About Us icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">About Us</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.root_url }}/pages/faq" class="menu-list">
                <img
                  src="{{ 'header-faq.svg' | asset_url }}"
                  alt="FAQ icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">FAQ</span>
              </a>
            </li>
            <li>
              <a href="{{ routes.root_url }}/pages/news" class="menu-list">
                <img
                  src="{{ 'header-news.svg' | asset_url }}"
                  alt="News icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">News</span>
              </a>
            </li>

            <li>
              <a href="{{ routes.cart_url }}" class="menu-list header-cart-link">
                <span class="header-cart-icon-wrapper">
                  <img
                    src="{{ 'header-cart.svg' | asset_url }}"
                    alt="Cart icon"
                    class="icon-24"
                    width="24"
                    height="24"
                    loading="eager"
                    decoding="async"
                  >
                  {% if cart.items.size > 0 %}
                    <span class="header-cart__badge">{{ cart.items.size }}</span>
                  {% endif %}
                </span>
                <span class="menu-label">Cart</span>
              </a>
            </li>
            <li>
              <a href="{{ profile_url }}" class="menu-list">
                <img
                  src="{{ 'header-profile.svg' | asset_url }}"
                  alt="Profile icon"
                  class="icon-24"
                  width="24"
                  height="24"
                  loading="eager"
                  decoding="async"
                >
                <span class="menu-label">Profile</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <div id="sidebar">
      <div id="sidebar-panel" class="sidebar-panel" aria-hidden="true">
        <ul class="sidebar-list">
          <li>
            <a href="{{ routes.root_url }}" class="sidebar-link"
              ><img
                src="{{ 'header-home.svg' | asset_url }}"
                alt="Home icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">Home</span></a
            >
          </li>
          <li>
            <a href="{{ routes.root_url }}pages/esim-page?sim_type=esim" class="sidebar-link"
              ><img
                src="{{ 'header-esim.svg' | asset_url }}"
                alt="eSIM icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">eSIM</span></a
            >
          </li>
          <li>
            <a
              href="{{ routes.root_url }}pages/sim-card-page?sim_type=sim-card"
              class="sidebar-link"
              ><img
                src="{{ 'header-simcard.svg' | asset_url }}"
                alt="SIM Card icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">SIM Card</span></a
            >
          </li>
          <li>
            <a
              href="{{ routes.root_url }}pages/insurance-page?sim_type=insurance"
              class="sidebar-link"
              ><img
                src="{{ 'header-insurance.svg' | asset_url }}"
                alt="Insurance icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">Insurance</span></a
            >
          </li>
          <li>
            <a href="{{ routes.root_url }}pages/check-data-usage" class="sidebar-link"
              ><img
                src="{{ 'header-usage.svg' | asset_url }}"
                alt="Data Usage icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">Data Usage</span></a
            >
          </li>
          <li>
            <a href="{{ routes.root_url }}pages/check-data-usage-topup" class="sidebar-link"
              ><img
                src="{{ 'icon-plus.svg' | asset_url }}"
                alt="Top Up icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">Top Up</span></a
            >
          </li>
          <li>
            <a href="{{ routes.root_url }}pages/about-us" class="sidebar-link"
              ><img
                src="{{ 'header-about.svg' | asset_url }}"
                alt="About Us icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">About Us</span></a
            >
          </li>
          <li>
            <a href="{{ routes.root_url }}pages/faq" class="sidebar-link"
              ><img
                src="{{ 'header-faq.svg' | asset_url }}"
                alt="FAQ icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">FAQ</span></a
            >
          </li>
          <li>
            <a href="{{ routes.root_url }}pages/news" class="sidebar-link"
              ><img
                src="{{ 'header-news.svg' | asset_url }}"
                alt="News icon"
                class="icon-24"
                width="24"
                height="24"
                loading="lazy"
                decoding="async"

              ><span class="menu-label">News</span></a
            >
          </li>
        </ul>

        <div class="sidebar-mobile-block">
          <div class="currency-language">
            <div class="currency-language-group">
              <div class="inline-flex-center">
                {{- 'header-currency.svg' | inline_asset_content -}}
              </div>
              <div id="bucks-mobile"></div>
            </div>

            <localization-form>
              {%- form 'localization', id: 'FooterLanguageFormSidebar', class: 'localization-form' -%}
                <div class="localization-inner">
                  {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
                </div>
              {%- endform -%}
            </localization-form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="{{ 'header-menu.js' | asset_url }}" defer></script>
{% endunless %}

{% schema %}
{
  "name": "Header Settings",
  "settings": [
    {
      "type": "link_list",
      "id": "selected_menu",
      "label": "Menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}
