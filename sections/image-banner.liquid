{% style %}
  /* BANNER STYLE */
.banner-container {
  position: relative;
  width: 100%;
  max-width: 1920px;
  margin: 0 auto;
  height: 100%;
  background: transparent;
  display: flex;
  justify-content: center;
}

.banner__wrapper {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 900px;
  overflow: visible;
}

.banner__image {
  position: absolute;
  bottom: 0;
  left: 70%;
  width: 100%;
  height: 100%;
  transform: translateX(-70%);
  object-fit: cover;
  z-index: 0;
  pointer-events: none;
}

.banner__content--wrapper {
  position: absolute;
  width: 50%;
  padding: 0 5% 0 10%;
  z-index: 1;
}

.banner__heading--text p,
.banner__heading--desc p {
  color: var(--color-neutral);
  margin: 0;
}

#default-heading {
  font-weight: bold;
  color: var(--color-neutral);
  margin: 0;
}

.banner__heading-text p {
  letter-spacing: 0.1em;
}

.banner__heading-desc {
  font-weight: bold;
}

.banner__heading--search {
  margin-top: 10px;
}

@media (max-width: 768px) {
  .banner__wrapper {
    height: 800px;
    overflow: hidden;
  }

  .banner__image {
    width: 100%;
    height: 800px;
    top: 0;
    bottom: auto;
    left: 70%;
    transform: translateX(-70%);
    object-fit: cover;
    object-position: 70% bottom;
  }

  .banner__content--wrapper {
    width: 100%;
    padding: 0 24px;
    position: absolute;
    top: 30px;
  }

  .banner__heading--search {
    width: 100%;
  }

  .banner__heading--text p,
  .banner__heading--desc p {
    color: var(--color-primary);
    font-size: var(--font-large);
  }

  #default-heading {
    font-weight: bold;
    color: var(--color-primary);
  }
}

{% endstyle %}

<div class="banner-container">
  <div class="banner__wrapper">
    <img 
      class="banner__image"
      src="{{ section.settings.image | img_url: 'master' }}" 
      alt="Banner Image"
      loading="lazy"
    />
    <div class="banner__content--wrapper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2
              class="banner__heading--title {{ block.settings.heading_size }}"
              {{ block.shopify_attributes }}
              id="default-heading"
            >
              {{ block.settings.heading }}
            </h2>

            <h2
              class="banner__heading--result {{ block.settings.heading_size }}"
              id="search-heading"
              style="display: none;"
            >
              Search Result for “{{ search.terms }}”
            </h2>

          {%- when 'text' -%}
            <div class="banner__heading--text {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              <p>{{ block.settings.text }}</p>
            </div>
          {%- when 'desc' -%}
            <div class="banner__heading--desc {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              <p>{{ block.settings.desc }}</p>
            </div>
          {%- when 'search' -%}
            <div class="banner__heading--search">
              {% render 'search-bar' %}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

