<style>
  .hero-wrap {
    position: relative;
    width: 100%;
    min-height: 100vh;
    overflow: hidden;
    contain: layout style paint;
  }

  .hero-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    pointer-events: none;
    filter: brightness(0.7);
  }
</style>

<link rel="preload" href="{{ 'landing-hero-gsim.css' | asset_url }}" as="style">
<link rel="stylesheet" href="{{ 'landing-hero-gsim.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="{{ 'landing-hero-gsim.css' | asset_url }}"></noscript>

{%- assign is_mobile = false -%}
{%- if request.user_agent contains 'Mobile' or request.user_agent contains 'Android' -%}
  {%- assign is_mobile = true -%}
{%- endif -%}

<section class="hero-wrap">
  {%- unless is_mobile -%}
    <video
      class="hero-video"
      autoplay
      muted
      loop
      playsinline
      preload="none"
      poster="{{ 'bg-hero-gsim.webp' | asset_url }}"
    >
      <source src="{{ 'bg-hero-gsim.webm' | asset_url }}" type="video/webm">
    </video>
  {%- else -%}
    <div
      class="hero-video"
      style="background-image:url({{ 'bg-hero-gsim.webp' | asset_url }});background-size:cover;background-position:center"
    ></div>
  {%- endunless -%}

  <div class="landing-hero">
    <div class="hero-content">
      <h1 class="hero-title">
        Travel Smarter with<br>
        Global Komunika gSim!
      </h1>

      <p class="hero-subtitle">A reusable eSIM that can be topped up anytime for flexible connectivity.</p>

      <a href="https://gkomunika.com/id/search?q=gsim" class="btn-primary">OUR PRODUCT</a>
    </div>

    <div class="cover-image">
      <img
        src="{{ 'cover.webp' | asset_url }}"
        alt="gSim Mascot"
        width="480"
        height="854"
        loading="eager"
        decoding="async"
      >
    </div>
  </div>
</section>

