<link rel="stylesheet" href="{{ 'landing-package-gsim.css' | asset_url }}">

<section class="landing-package-gsim">
  <div class="package-content">
    <img
      src="{{ 'choose-package-gsim.png' | asset_url }}"
      alt="gSim Packages"
      class="package-image"
      width="300"
      height="auto"
      loading="eager"
      decoding="async"
    >

    <img
      src="{{ 'asia-gsim.png' | asset_url }}"
      alt="Asia gSim Packages"
      class="asia-image"
      width="300"
      height="auto"
      loading="lazy"
      decoding="async"
    >
    <a
      href="https://gkomunika.com/id/products/gsim-asia"
      class="btn-buy-package"
      target="_blank"
      rel="noopener noreferrer"
      >BUY NOW</a
    >

    <img
      src="{{ 'eropa-gsim.png' | asset_url }}"
      alt="Europe gSim Packages"
      class="eropa-image"
      width="600"
      height="auto"
      loading="lazy"
      decoding="async"
    >
    <a
      href="https://gkomunika.com/products/gsim-europe"
      class="btn-buy-package"
      target="_blank"
      rel="noopener noreferrer"
      >BUY NOW</a
    >
  </div>

  <button class="btn-next" type="button" aria-label="Next packages"></button>
</section>

{% schema %}
{
  "name": "Landing • Packages gSim",
  "settings": [],
  "blocks": [],
  "presets": [{ "name": "Landing • Packages gSim" }]
}
{% endschema %}
