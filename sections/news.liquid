{% style %}
  .news-container {
    max-width: 1920px;
    margin: 0 auto;
  }
  .news__content-top {
    padding: 0 10% 100px;
  }
  .news-content__wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    padding-top: 60px;
    border-radius: 15px;
    gap: 20px;
  }
  .news-content__wrapper-category {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px 15px;
  }
  .news__main-text {
    text-align: center;
    margin-top: 50px;
  }
  .news__main-heading {
    color: var(--color-primary);
    font-weight: bold;
    font-size: 30px;
    margin: 0;
    line-height: 1.5;
  }
  .news__main-description {
    color: var(--color-primary);
  }
  .news-content__card {
    background-color: var(--color-neutral);
    border-radius: 15px;
    padding: 15px;
    flex: 1;
    transition: transform 0.3s;
  }
  .news-content__card:hover {
    transform: translateY(-5px);
    box-shadow: var(--box-shadow);
    cursor: pointer;
  }
  .news-content__card img {
    width: 100%;
    height: auto;
    border-radius: 15px;
    aspect-ratio: 3 / 2;
  }
  .news-content__card-title {
    color: var(--color-primary);
    font-size: var(--font-supper-large);
    font-weight: bold;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
  }
  .news-content__date {
    display: flex;
    align-items: center;
    gap: 5px;
    color: var(--color-secondary);
    font-size: 14px;
  }
  .news-content__card-description {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-size: 14px;
    color: var(--color-primary);
    margin: 5px 0;
  }
  .new-content__link {
    text-decoration: none;
  }

  .news-hero-shoot {
    display: flex;
    justify-content: center;
  }
  .news__hero-wrapper {
    padding: 70px 10%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .news__hero-wrapper h2 {
    font-weight: bold;
    font-size: 30px;
  }
  .news__hero-wrapper h2,
  span {
    margin: 0;
    line-height: 1.5;
    color: var(--color-primary);
  }
  .news__hero-button {
    margin-top: 20px;
    background-color: var(--color-primary);
    border: none;
    outline: none;
    padding: 15px;
    border-radius: 15px;
    color: var(--color-neutral);
    font-size: var(--font-large);
    letter-spacing: 1px;
  }
  .news__hero-button:hover {
    box-shadow: var(--box-shadow);
  }
  .news__hero-button:active {
    transform: translateY(5px);
  }
  .news__latest-article {
    color: var(--color-primary);
    font-size: 28px;
    text-align: center;
  }
  .news-hero {
    width: 100%;
    height: 450px;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    padding: 0 10%;
  }

  .news-hero__content {
    display: flex;
    flex-direction: column;
    gap: 10px;
    text-align: left;
  }

  .news-hero__content h2 {
    font-weight: bold;
    font-size: 32px;
    color: var(--color-neutral);
    margin: 0;
  }

  .news-hero__content p {
    color: var(--color-neutral);
    margin: 0;
  }

  .article-item {
    display: none;
  }

  .article-item.visible {
    display: block;
  }

  .see-more-container {
    text-align: center;
    margin-top: 40px;
    margin-bottom: 40px;
    display: flex;
    justify-content: center;
  }

  .see-more-btn {
    padding: 8px 24px;
    background-color: var(--color-primary);
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .see-more-btn:hover {
    background-color: var(--color-secondary);
  }

  .see-more-btn.hidden {
    display: none;
  }

  @media (max-width: 1440px) {
    .news__content-top {
      padding: 0 10% 100px;
    }
  }
  @media (max-width: 768px) {
    .news-content__wrapper {
      grid-template-columns: 1fr !important;
      padding: 20px 24px !important;
    }

    .news-content__wrapper-category {
      grid-template-columns: 1fr !important;
      padding: 20px 24px !important;
    }

    .news-content__card {
      width: 100% !important;
      max-width: 100% !important;
    }

    .news-hero {
      height: auto;
      padding: 150px 10%;
    }

    .news-hero__content h2 {
      font-size: 24px;
    }
  }

  @media screen and (min-width: 430px) and (max-width: 440px) {
    .news__content-top {
      padding: 0;
    }
  }

  @media (max-width: 426px) {
    .news-content__wrapper {
      grid-template-columns: 1fr !important;
      padding: 20px 24px !important;
    }

    .news-content__wrapper-category {
      grid-template-columns: 1fr !important;
      padding: 20px 24px !important;
    }

    .news-content__card {
      width: 100% !important;
      max-width: 100% !important;
    }

    .news__content-top {
      padding: 0 24px;
    }
    .news__hero-wrapper {
      padding: 24px 24px;
    }
    .news-hero {
      height: auto;
      padding: 150px 10%;
    }
  }
{% endstyle %}

<script>
(async function () {
  const CATEGORIES = ['news', 'travel-guide', 'travel-tips', 'event', 'tech-guide']
    .map(s => s.toLowerCase());

  let page = 1;
  let items = [];

  while (true) {
    const url = `/search?view=news-api-json&type=page&q=%2A&page=${page}`;
    const res = await fetch(url, { credentials: 'same-origin' });
    if (!res.ok) throw new Error('HTTP ' + res.status);

    const data = await res.json();

    // Filter category: ambil item yang category-nya ada di daftar CATEGORIES
    const filtered = (data.items || []).filter(x => {
      const cat = (x.category || '').toLowerCase().trim();
      return CATEGORIES.includes(cat);
    });

    items = items.concat(filtered);

    if (page >= data.pages) break;
    page += 1;
  }

  console.log('Total filtered:', items.length);
  console.log(items);
})();
</script>

