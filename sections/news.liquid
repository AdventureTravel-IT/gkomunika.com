<script>
  (function () {
    const currentLocale = '{{ request.locale.iso_code }}';
    const currentPath = window.location.pathname;
    const normalizedCategory = '{{ normalized_category }}';

    const categoryMap = {
      en_to_id: {
        news: 'berita',
        event: 'acara',
        'travel-guide': 'panduan-perjalanan',
        'travel-tips': 'tips-perjalanan',
        'tech-guide': 'panduan-teknologi',
      },
      id_to_en: {
        berita: 'news',
        acara: 'event',
        peristiwa: 'event',
        'panduan-perjalanan': 'travel-guide',
        'tips-perjalanan': 'travel-tips',
        'panduan-teknologi': 'tech-guide',
      },
    };

    function getCurrentSlug() {
      const pathParts = currentPath.split('/').filter((p) => p);
      return pathParts[pathParts.length - 1];
    }

    function buildCategoryURL(slug) {
      if (currentLocale === 'id') {
        return '/id/pages/news-category/' + slug;
      } else {
        return '/pages/news-category/' + slug;
      }
    }

    function isURLCorrect() {
      const currentSlug = getCurrentSlug();

      if (currentSlug === 'news-category') {
        return false;
      }

      const hasIdPrefix = currentPath.startsWith('/id/');
      const shouldHaveIdPrefix = currentLocale === 'id';

      if (hasIdPrefix !== shouldHaveIdPrefix) {
        return false;
      }

      const validSlugs = [
        'news',
        'berita',
        'event',
        'acara',
        'peristiwa',
        'travel-guide',
        'panduan-perjalanan',
        'travel-tips',
        'tips-perjalanan',
        'tech-guide',
        'panduan-teknologi',
      ];

      return validSlugs.includes(currentSlug);
    }

    function fixURLIfNeeded() {
      if (sessionStorage.getItem('languageSwitching')) {
        return;
      }

      if (!currentPath.includes('/news-category')) {
        return;
      }

      if (isURLCorrect()) {
        return;
      }

      const currentSlug = getCurrentSlug();
      let targetSlug;

      if (currentSlug === 'news-category' || currentSlug === '') {
        try {
          const lastVisited = localStorage.getItem('lastCategoryVisited');
          if (lastVisited) {
            targetSlug = currentLocale === 'id' ? categoryMap.en_to_id[lastVisited] || lastVisited : lastVisited;
            localStorage.removeItem('lastCategoryVisited');
          } else {
            targetSlug = currentLocale === 'id' ? 'berita' : 'news';
          }
        } catch (e) {
          targetSlug = currentLocale === 'id' ? 'berita' : 'news';
        }
      } else {
        const normalized = categoryMap.id_to_en[currentSlug] || currentSlug;
        targetSlug = currentLocale === 'id' ? categoryMap.en_to_id[normalized] || normalized : normalized;
      }

      const targetURL = buildCategoryURL(targetSlug);
      window.location.replace(targetURL);
    }

    function setupLanguageSwitcher() {
      if (currentPath.includes('/news-category/')) {
        const currentSlug = getCurrentSlug();
        if (currentSlug && currentSlug !== 'news-category') {
          const normalized = categoryMap.id_to_en[currentSlug] || currentSlug;
          try {
            localStorage.setItem('lastCategoryVisited', normalized);
          } catch (e) {}
        }
      }

      const findAndInterceptLocalizationForm = () => {
        const selectors = [
          'localization-form',
          '.localization-form',
          'form[action*="localization"]',
          '[data-localization-form]',
        ];

        for (let selector of selectors) {
          const form = document.querySelector(selector);
          if (form) {
            form.addEventListener(
              'submit',
              function (e) {
                if (currentPath.includes('/news-category/')) {
                  const currentSlug = getCurrentSlug();
                  if (currentSlug && currentSlug !== 'news-category') {
                    const normalized = categoryMap.id_to_en[currentSlug] || currentSlug;
                    sessionStorage.setItem('savedCategorySlug', normalized);
                    sessionStorage.setItem('languageSwitching', 'true');
                    try {
                      localStorage.setItem('lastCategoryVisited', normalized);
                    } catch (e) {}
                  }
                }
              },
              true
            );
            return;
          }
        }

        const hreflangLinks = document.querySelectorAll('a[hreflang]');
        hreflangLinks.forEach((link) => {
          link.addEventListener(
            'click',
            function (e) {
              if (currentPath.includes('/news-category/')) {
                const currentSlug = getCurrentSlug();
                if (currentSlug && currentSlug !== 'news-category') {
                  const normalized = categoryMap.id_to_en[currentSlug] || currentSlug;
                  sessionStorage.setItem('savedCategorySlug', normalized);
                  sessionStorage.setItem('languageSwitching', 'true');
                  try {
                    localStorage.setItem('lastCategoryVisited', normalized);
                  } catch (e) {}
                }
              }
            },
            true
          );
        });
      };

      findAndInterceptLocalizationForm();
      document.addEventListener('DOMContentLoaded', findAndInterceptLocalizationForm);
    }

    function handlePostLanguageSwitch() {
      const savedSlug = sessionStorage.getItem('savedCategorySlug');
      const isSwitching = sessionStorage.getItem('languageSwitching');

      let categoryToRestore = savedSlug;
      if (!categoryToRestore) {
        try {
          categoryToRestore = localStorage.getItem('lastCategoryVisited');
        } catch (e) {}
      }

      if (!categoryToRestore || !isSwitching) {
        return;
      }

      const targetSlug =
        currentLocale === 'id' ? categoryMap.en_to_id[categoryToRestore] || categoryToRestore : categoryToRestore;

      const targetURL = buildCategoryURL(targetSlug);

      sessionStorage.removeItem('savedCategorySlug');
      sessionStorage.removeItem('languageSwitching');

      if (currentPath !== targetURL) {
        window.location.replace(targetURL);
      } else {
        try {
          localStorage.removeItem('lastCategoryVisited');
        } catch (e) {}
      }
    }

    function initArticleDisplay() {
      const articles = document.querySelectorAll('.article-item');
      const seeMoreBtn = document.getElementById('seeMoreBtn');

      if (articles.length === 0) {
        return;
      }

      let isExpanded = false;

      function getInitialLimit() {
        return window.innerWidth <= 768 ? 3 : 6;
      }

      function showArticles() {
        const limit = isExpanded ? articles.length : getInitialLimit();

        articles.forEach((article, index) => {
          if (index < limit) {
            article.classList.add('visible');
          } else {
            article.classList.remove('visible');
          }
        });

        if (seeMoreBtn) {
          if (articles.length <= getInitialLimit()) {
            seeMoreBtn.style.display = 'none';
          } else {
            seeMoreBtn.style.display = 'block';
            seeMoreBtn.textContent = isExpanded
              ? currentLocale === 'id'
                ? 'Tampilkan Lebih Sedikit'
                : 'Show Less'
              : currentLocale === 'id'
              ? 'Lihat Lebih Banyak'
              : 'See More';
          }
        }
      }

      if (seeMoreBtn) {
        seeMoreBtn.addEventListener('click', function () {
          isExpanded = !isExpanded;
          showArticles();

          if (!isExpanded) {
            const contentTop = document.querySelector('.news__content-top');
            if (contentTop) {
              contentTop.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
          }
        });
      }
      showArticles();

      let resizeTimer;
      window.addEventListener('resize', function () {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(function () {
          if (!isExpanded) showArticles();
        }, 250);
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function () {
        setupLanguageSwitcher();
        setTimeout(handlePostLanguageSwitch, 100);
        setTimeout(fixURLIfNeeded, 200);
        setTimeout(initArticleDisplay, 350);
      });
    } else {
      setupLanguageSwitcher();
      setTimeout(handlePostLanguageSwitch, 100);
      setTimeout(fixURLIfNeeded, 200);
      setTimeout(initArticleDisplay, 350);
    }
  })();
</script>

