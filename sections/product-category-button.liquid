<section class="product-category">
  <div class="product-category__wrapper">
    <button
      id="btn-esim"
      class="product-category__button"
      data-category="esim"
    >
      <div class="product-category__icon">
        {% render 'icon-qr-code' %}
      </div>
      <span class="product-category__label">eSIM</span>
    </button>

    <button
      id="btn-simcard"
      class="product-category__button"
      data-category="sim-card"
    >
      <div class="product-category__icon">
        {% render 'icon-simcard' %}
      </div>
      <span class="product-category__label">SIM Card</span>
    </button>

    <button
      id="btn-insurance"
      class="product-category__button"
      data-category="insurance"
    >
      <div class="product-category__icon">
        {% render 'icon-insurance' %}
      </div>
      <span class="product-category__label">Insurance</span>
    </button>
  </div>
</section>

<style>
  .product-category {
    max-width: 1920px;
    margin: 0 auto;
  }

  .product-category__wrapper {
    display: flex;
    padding: 20px 10%;
    flex-wrap: nowrap;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding-bottom: 8px;
  }

  .product-category__wrapper::-webkit-scrollbar {
    height: 6px;
  }

  .product-category__wrapper::-webkit-scrollbar-track {
    background: transparent;
  }

  .product-category__wrapper::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.15);
    border-radius: 999px;
  }

  .product-category__button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 15px;
    border-radius: 15px;
    border: none;
    cursor: pointer;
    background-color: var(--color-primary, #2563eb); /* fallback biru */
    color: var(--color-on-primary, #ffffff);
    white-space: nowrap;
    transition: transform 0.15s ease, box-shadow 0.15s ease, background-color 0.15s ease;
    flex-shrink: 0;
  }

  .product-category__button:active {
    transform: translateY(0);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .product-category__icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-category__label {
    font-weight: 700;
    font-size: 1.5rem;
    line-height: 1.2;
    color: inherit;
  }

  @media (max-width: 768px) {
    .product-category__wrapper {
      padding: 16px 20px;
      flex-wrap: wrap;
      overflow-x: visible;
      gap: 12px;
      justify-content: center;
    }

    .product-category__button {
      padding: 10px 14px;
      font-size: 0.9rem;
      flex: 0 0 auto;
    }

    .product-category__label {
      font-size: 1rem;
    }

    .product-category__icon {
      width: 18px;
      height: 18px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const btnEsim = document.getElementById('btn-esim');
    const btnSimcard = document.getElementById('btn-simcard');
    const btnInsurance = document.getElementById('btn-insurance');

    function goToCategory(button) {
      const categoryValue = button.getAttribute('data-category');
      if (categoryValue) {
        window.location.href = `/pages/product-category?sim_type=${encodeURIComponent(categoryValue)}`;
      }
    }

    btnEsim.addEventListener('click', () => goToCategory(btnEsim));
    btnSimcard.addEventListener('click', () => goToCategory(btnSimcard));
    btnInsurance.addEventListener('click', () => goToCategory(btnInsurance));
  });
</script>

