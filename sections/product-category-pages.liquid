<script>
document.addEventListener('DOMContentLoaded', function () {
  /*** Flip Card Functionality ***/
  document.querySelectorAll('.flipped-trigger').forEach(function (button) {
    button.addEventListener('click', function (event) {
      event.stopPropagation();
      let card = this.closest('.product-card-container');
      card.classList.toggle('flipped');
    });
  });

  document.addEventListener('click', function (event) {
    document.querySelectorAll('.product-card-container.flipped').forEach(function (card) {
      if (!card.contains(event.target) || event.target.closest('.product-card-content-flip-back')) {
        card.classList.remove('flipped');
      }
    });
  });

  /*** SIM Type Filter Buttons with URL Param Handling ***/
  const params = new URLSearchParams(window.location.search);
  const simTypeParam = params.get('sim_type'); // contoh: esim, sim-card, insurance

  const filterButtonsContainer = document.querySelector('.sim-filter-buttons');
  const buttons = filterButtonsContainer ? filterButtonsContainer.querySelectorAll('button') : [];
  const productCards = document.querySelectorAll('.product-card-container');

  // Fungsi untuk filter produk
  function filterProducts(activeFilter) {
    productCards.forEach(card => {
      const cardSimType = card.className.match(/sim-type-([^\s]+)/);
      const cardType = cardSimType ? cardSimType[1] : '';

      if (activeFilter === 'all' || activeFilter === cardType) {
        card.style.display = 'flex';
      } else {
        card.style.display = 'none';
      }
    });
  }

  // Tentukan filter awal
  let activeFilter = 'all';
  if (simTypeParam) {
    // Normalisasi param: lowercase & ganti spasi/underscore jadi dash
    activeFilter = simTypeParam.toLowerCase().replace(/\s+/g, '-').replace(/_/g, '-');
  }

  // Set tombol active sesuai param
  buttons.forEach(btn => {
    btn.classList.remove('active');
    if (btn.getAttribute('data-filter') === activeFilter) {
      btn.classList.add('active');
    }
  });

  // Jalankan filter pertama kali
  filterProducts(activeFilter);
  document.body.classList.add('loaded');

  // Klik tombol manual untuk ganti filter
  buttons.forEach(button => {
    button.addEventListener('click', () => {
      buttons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      const selectedFilter = button.getAttribute('data-filter');
      filterProducts(selectedFilter);
    });
  });
});
</script>


