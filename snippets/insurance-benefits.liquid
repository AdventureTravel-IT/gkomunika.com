        </tr>
      </thead>

      <tbody>
        {% for items in packages %}
          {%- comment -%} total baris untuk kategori (items.name) {%- endcomment -%}
          {% assign total_rows = 0 %}
          {% for sb in items.sub_benefits %}
            {% assign cnt = sb.items | size %}
            {% if cnt == 0 %}{% assign cnt = 1 %}{% endif %}
            {% assign total_rows = total_rows | plus: cnt %}
          {% endfor %}

          {% for sub_benefit in items.sub_benefits %}
            {% assign sb_count = sub_benefit.items | size %}
            {% if sb_count == 0 %}{% assign sb_count = 1 %}{% endif %}

            {% if forloop.first %}
              <tr>
                <th rowspan="{{ total_rows }}">{{ items.name }}</th>
                <th rowspan="{{ sb_count }}">{{ sub_benefit.name }}</th>

                {% if sub_benefit.items.size > 0 %}
