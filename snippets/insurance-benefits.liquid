                    <td>{{ v.name }}</td>
                    {% for plan in plans %}
                      {% if forloop.index0 < v.benefits.size %}
                        {% assign benefit = v.benefits[forloop.index0] %}
                        {% assign benefit_value = benefit | remove: "," | plus: 0 %}

                        {% if sub_benefit.name == "Medical Expenses" %}
                          {% if v.name == "Age 65 and below" or v.name == "Age 65-75" or v.name == "Age 76 and over" %}
                            {% if benefit_value > 590000000 %}
                              {% assign benefit = benefit | append: " <span style='color: var(--color-secondary);'>(minimum of €30,000 is required for applying Schengen visa)</span>" %}
                            {% endif %}
                          {% endif %}
                        {% endif %}
                        <td>{{ benefit }}</td>
                      {% endif %}
                    {% endfor %}
                  </tr>
                {% endfor %}
              {% endif %}
            {% else %}
              <tr>
                <th rowspan="{{ sb_count }}">{{ sub_benefit.name }}</th>

                {% if sub_benefit.items.size > 0 %}
