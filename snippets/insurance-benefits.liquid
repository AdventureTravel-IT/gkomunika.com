                        {% if first_item.name == "Age 65 and below" or first_item.name == "Age 65-75" or first_item.name == "Age 76 and over" %}
                          {% if benefit_value > 590000000 %}
                            {% assign benefit = benefit | append: " <span style='color: var(--color-secondary);'>(minimum of €30,000 is required for applying Schengen visa)</span>" %}
                          {% endif %}
                        {% endif %}
                      {% endif %}
                      <td>{{ benefit }}</td>
                    {% endif %}
                  {% endfor %}
                {% else %}
                  <td></td>
                  {% for plan in plans %}
                    <td>2</td>
                  {% endfor %}
                {% endif %}
              </tr>

              {% if sub_benefit.items.size > 1 %}
                {% for v in sub_benefit.items offset: 1 %}
